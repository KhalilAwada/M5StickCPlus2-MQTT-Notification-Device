{
  "env": {
    "es2021": true,
    "browser": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 4],
    "linebreak": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "trailingComma": ["error", "all"],
    "bracketSpacing": ["error", true],
    "arrowParens": ["error", "always"],
    "no-multi-spaces": "error",
    "no-extra-semi": "error",
    "no-trailing-spaces": "error",
    "camelcase": "error",
    "no-undef": "error",
    "no-unused-vars": "error",
    "no-console": "off",
    "no-debugger": "error"
  },
  "overrides": [
    {
      "files": "*.cpp",
      "rules": {
        "no-unused-vars": "off"
      }
    }
  ]
}
